{
    "name": "@actlib/source",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow yarn",
        "upgrade-self": "yarn set version latest && yarn",
        "up:nx": "nx migrate latest && nx migrate --run-migrations --if-exists",
        "up:i": "yarn upgrade-interactive",
        "prettier": "prettier --write .",
        "lint:all": "yarn nx run-many -t lint",
        "lint:fix": "eslint . --fix",
        "build:all": "yarn nx run-many -t build",
        "prepare": "husky",
        "cmt": "npx cz",
        "cq": "yarn prettier && yarn nx run-many -t lint && yarn nx run-many -t circular-deps",
        "release": "yarn nx run-many -t build && tsx tools/release.ts"
    },
    "devDependencies": {
        "@commitlint/cli": "19.8.1",
        "@commitlint/config-nx-scopes": "19.8.1",
        "@eslint/js": "9.27.0",
        "@nx/eslint": "21.0.3",
        "@nx/eslint-plugin": "21.0.3",
        "@nx/js": "21.0.3",
        "@nx/rollup": "21.0.3",
        "@swc-node/register": "1.10.10",
        "@swc/cli": "0.7.5",
        "@swc/core": "1.11.24",
        "@swc/helpers": "0.5.17",
        "@trivago/prettier-plugin-sort-imports": "5.2.2",
        "@types/fs-extra": "11.0.4",
        "@types/node": "22.15.17",
        "@types/react": "19.1.3",
        "dpdm": "3.14.0",
        "eslint": "9.27.0",
        "eslint-config-prettier": "10.1.5",
        "eslint-plugin-check-file": "3.2.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-no-relative-import-paths": "1.6.1",
        "eslint-plugin-promise": "7.2.1",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "5.2.0",
        "eslint-plugin-react-native": "5.0.0",
        "fs-extra": "11.3.0",
        "husky": "9.1.7",
        "jsonc-eslint-parser": "2.4.0",
        "lint-staged": "15.5.2",
        "nx": "21.0.3",
        "prettier": "3.5.3",
        "prettier-plugin-sort-json": "4.1.1",
        "react": "19.1.0",
        "react-native": "0.79.2",
        "react-native-gesture-handler": "2.25.0",
        "react-native-reanimated": "3.17.5",
        "rollup": "4.40.2",
        "swc-loader": "0.2.6",
        "tslib": "2.8.1",
        "tsx": "4.19.4",
        "typescript": "5.8.3",
        "typescript-eslint": "8.32.1"
    },
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": ">=22",
        "yarn": ">=4.7.0"
    },
    "packageManager": "yarn@4.9.1"
}
