{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "allowJs": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "extends": "../../tsconfig.base.json",
    "include": ["src/**/*.ts"],
    "references": []
}
